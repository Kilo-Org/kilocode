{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"useUnknownInCatchVariables": false,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@src/*": ["../../src/*"],
			"@roo/*": ["../../src/shared/*"],
			"@ghost-benchmarks/*": ["../../packages/ghost-benchmarks/src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": [
		"node_modules",
		"**/__test_cases__/**",
		"**/__test_cases_autocomplete__/**",
		"**/__test_cases_migrated__/**"
	]
}
