{
	"extends": "../../webview-ui/tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["../../webview-ui/src/*"],
			"@src/*": ["../../webview-ui/src/*"],
			"@roo/*": ["../../src/dist/shared/*", "../../src/shared/*"],
			"@roo-code/*": ["../../packages/*"]
		},
		"types": ["react", "react-dom", "vite/client"],
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": ["./stories/**/*", "./src/**/*", "./.storybook/**/*"],
	"exclude": [
		"node_modules",
		"**/node_modules/**",
		"storybook-static",
		"dist",
		"**/dist/**",
		"**/.turbo/**",
		"**/coverage/**",
		"**/.git/**",
		"**/.vscode/**",
		"**/*.map",
		"**/*.log"
	],
	"references": [{ "path": "../../src" }, { "path": "../../webview-ui" }]
}
