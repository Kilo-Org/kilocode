{
	"mcpServers": {
		"repo-mcp-server": {
			"type": "stdio",
			"command": "/bin/bash",
			"args": [
				"-c",
				"cd \"$PWD/repo-mcp-server\" && npm i && npx nodemon --exec \"npx tsx src/index.ts\" --watch src"
			],
			"env": {
				"OPENROUTER_API_KEY": "${env:OPENROUTER_API_KEY}"
			},
			"timeout": 180,
			"alwaysAllow": ["move_i18n_key", "list_locales", "remove_i18n_keys", "translate_i18n_key"],
			"watchFiles": true,
			"restartOnChange": true
		}
	}
}
