{
	"name": "@kilo-code/docs",
	"version": "1.0.0",
	"description": "Developer documentation for Kilo Code",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "node scripts/build-docs.mjs",
		"docs:build": "node scripts/build-docs.mjs",
		"docs:validate": "node scripts/validate-docs.mjs",
		"docs:check-links": "node scripts/check-links.mjs",
		"dev": "node scripts/dev-docs.mjs",
		"lint": "markdownlint **/*.md --ignore node_modules",
		"format": "prettier --write **/*.md",
		"validate": "node scripts/validate-docs.mjs",
		"check-links": "node scripts/check-links.mjs"
	},
	"devDependencies": {
		"markdownlint": "^0.34.0",
		"markdownlint-cli": "^0.39.0",
		"markdown-link-check": "^3.12.2",
		"gray-matter": "^4.0.3",
		"remark": "^15.0.1",
		"remark-html": "^16.0.1",
		"remark-gfm": "^4.0.0",
		"remark-prism": "^1.3.6",
		"glob": "^10.3.10",
		"chokidar": "^3.6.0"
	}
}
