{
	"contributes": {
		"commands": [
			{
				"command": "kilo-code.ghost.generateSuggestions",
				"title": "Kilo Code: Generate Suggested Edits",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghost.cancelSuggestions",
				"title": "Cancel Suggested Edits",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghost.applyCurrentSuggestions",
				"title": "Apply Current Suggested Edit",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghost.applyAllSuggestions",
				"title": "Apply All Suggested Edits",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghost.promptCodeSuggestion",
				"title": "Quick Task",
				"category": "%configuration.title%"
			}
		],
		"keybindings": [
			{
				"command": "kilo-code.ghost.keyTab",
				"key": "tab",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode && kilocode.ghost.hasSuggestions"
			},
			{
				"command": "kilo-code.ghost.keyEscape",
				"key": "escape",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode && kilocode.ghost.hasSuggestions"
			},
			{
				"command": "kilo-code.ghost.keyDown",
				"key": "down",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode && kilocode.ghost.hasSuggestions"
			},
			{
				"command": "kilo-code.ghost.keyUp",
				"key": "up",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode && kilocode.ghost.hasSuggestions"
			},
			{
				"command": "kilo-code.ghost.keyCmdI",
				"key": "ctrl+i",
				"mac": "cmd+i",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode"
			},
			{
				"command": "kilo-code.ghost.keyCmdL",
				"key": "ctrl+l",
				"mac": "cmd+l",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode"
			}
		],
		"codeActions": [
			{
				"languages": ["*"],
				"providedCodeActionKinds": ["vscode.CodeActionKind.QuickFix"]
			}
		]
	}
}
